<%- include('./pertils/header.ejs')%>
<body>
    <%- include('./pertils/navbar.ejs')%>
   
   <div class="container">
   </br>
   
        <h1><%= pergunta.titulo%></h1>

        <p><%= pergunta.descricao%></p>

          
   
   <hr>
   
   <form method="POST" action="/salvarresposta">
       <h3>Responda</h3>
   </br>
       <textarea name="resposta" class="form-control"placeholder="Respoda aqui "></textarea>
   </br>
        <input type="hidden" name="id"value="<%=pergunta.id%>">
        <button class="btn btn-danger">Salvar</button>
   </form>
</br>
<hr>
   <%if(resposta){%>
    <h3>Respostas</h3>
    
    <%}%>
    <% resposta.forEach(resp => {%>
        <div class="card">
            <div class="card-body">
                <p><%=resp.corpo%></p>
            </div>
        </div>
        </br>
        
    <%})%> 
   </div>
    
</body>

<%- include('./pertils/footer.ejs')%>