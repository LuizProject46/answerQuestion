<%- include('./pertils/header.ejs')%>
<body>
    <%- include('./pertils/navbar.ejs')%>
   
   <div class="container">
   </br>
   <div class="row">
       <div class="col-md-6">
            <h1>Perguntas</h1>
       </div>
    
       <div class="col-md-6 d-flex justify-content-end align-items-center">
           <button class="btn btn-danger">Buscar</button>
           <input style="display: none;" class="form-control" placeholder="pesquisar">
        </div>
        
   </div>
       
       <hr>

    <% perguntas.forEach(pergunta =>{ %>
    </br>
        <div class="card">
            <div class="card-body">
                <h3><%= pergunta.titulo%></h3>
            </div>
            <div class="card-footer">
                <a href="/pergunta/<%= pergunta.id%>"class="btn btn-outline-danger w-100">Responder</a>
            </div>
        </div>
    </br>
       
    <%})%>
   </div>
    
</body>

